{{!
    @template theme_academi/academi_blocks

    Academi additional blocks template.
    Example context (json):
    {
        "sitename": "Moodle",
        "output": {
            "doctype": "<!DOCTYPE html>",
            "page_title": "academi blocks page",
            "main_content": "<h1>Headings make html validators happier</h1>"
        },
        "bodyattributes":"",
        "sitefeatures": "false",
        "mspot": "false",
        "jumbotron": "false"
    }
}}

{{#sitefeatures}}
    <div class="site-features {{class}}" id="sitefeatures">
        <div class="custom-site-expo">
            <div class="container">
                <div class='sitefeature-block-title'>
                    {{#blocktitle}}
                        <h2><b>{{blocktitle}}</b></h2>
                    {{/blocktitle}}
                    {{#blockdesc}}
                        <p>{{{blockdesc}}}</p>
                    {{/blockdesc}}
                </div>

                <div class="row">
                    {{#feature}}
                        {{#status}}
                            <div class="{{colclass}}">
                                <div class="sitebox">
                                    {{#icon}}
                                        <div class="site-feature-head">
                                            <div class="rcthumb">
                                                <i class="fa fa-{{icon}}"></i>
                                            </div>
                                        </div>
                                    {{/icon}}
                                    {{#sfbbody}}
                                        <div class="site-feature-body">
                                            {{#title}}<h6>{{title}}</h6>{{/title}}
                                            {{#content}}<p>{{content}}</p>{{/content}}
                                        </div>
                                    {{/sfbbody}}
                                </div>
                            </div>
                        {{/status}}
                    {{/feature}}
                </div>
            </div>
        </div>
    </div>
{{/sitefeatures}}

{{#mspot}}
    <div class="marketing-spot" id="marketingspot">
        <div class="container">
            <div class="info-block">
                <div class="info-head">
                    {{#title}}<h2><b>{{title}}</b></h2>{{/title}}
                    {{#desc}}<p>{{desc}}</p>{{/desc}}
                </div>
                <div class="row">
                    {{#content}}
                        <div class="{{colclass}}">
                            <div class="info-content">
                                <p>{{{content}}}</p>
                            </div>
                        </div>
                    {{/content}}
                    {{#media}}
                        <div class="{{colclass}}">
                            <div class="info-media">
                                <img src="{{{media}}}" class="media-image">
                            </div>
                        </div>
                    {{/media}}
                </div>
            </div>
        </div>
    </div>
{{/mspot}}

{{#jumbotron}}
    <div class="jumbotron-block" id="jumbotron">
        <div class="container">
            <div class="inner-wrap">
                <div class="desc-wrap">
                    {{#title}}<h2><b>{{title}}</b></h2>{{/title}}
                    {{#desc}}<p>{{desc}}</p>{{/desc}}
                </div>
                <div class="btn-block">
                    {{#btntext}}
                        <a href="{{{buttonlink}}}" target="{{btntarget}}" class='btn-jumbo'>
                            {{{btntext}}}
                        </a>
                    {{/btntext}}
                </div>
            </div>
        </div>
    </div>
{{/jumbotron}}