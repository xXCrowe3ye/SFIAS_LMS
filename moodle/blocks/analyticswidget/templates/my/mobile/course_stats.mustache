{{!
    @template block_analyticswidget/course_stats

    Example context (json):
    {
        "enrolment": {
            "data": [
            1,
            0
            ],
            "label": [
            "Active",
            "In-Active"
            ]
        },
        "chart_enrolment": {
            "label": "[\"Active\",\"In-Active\"]",
            "dataset": "[1,0]"
        },
        "completion": {
            "data": [
            1,
            0,
            1
            ],
            "label": [
            "Active",
            "Completed",
            "In Progress"
            ]
        },
        "chart_completion": {
            "label": "[\"Active\",\"Completed\",\"In Progress\"]",
            "dataset": "[1,0,1]"
        },
        "enrolasstudent": 1
    }
}}
{{#enrolasstudent}}

<ion-col size="12" size-lg="5" class="aw_stats">
    <ion-item class="aw_header">
        <h6>{{#str}}my_level, block_analyticswidget{{/str}}</h6>
      </ion-item>
    <ion-card>
    <ion-card-header>
      <ion-card-subtitle
        > <ion-icon name="fas-graduation-cap" class="course-icon" ></ion-icon>  {{#str}}my_so_far, block_analyticswidget{{/str}} </ion-card-subtitle
      >
    </ion-card-header>

    <ion-card-content>
      {{^chart_completion}}
      <div class="aw_chart text-justify">
        {{#str}} my_no_course,block_analyticswidget{{/str}}
      </div>
      {{/chart_completion}}
      {{#chart_completion}}
      <core-chart
        type="bar"
        [data]="{{{chart_completion.dataset}}}"
        [labels]='{{{chart_completion.label}}}'
        height="100"
        
      ></core-chart>
      {{/chart_completion}}
    </ion-card-content>
  </ion-card>
</ion-col>


{{/enrolasstudent}}
